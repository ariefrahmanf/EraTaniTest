<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.AuthFragment">

    <Button
        android:id="@+id/btnBuyerLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as Buyer"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSellerLogin"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/btnSellerLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as Seller"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBuyerLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>